{
  "name": "local-talking-avatar",
  "version": "1.0.0",
  "description": "Fully local talking avatar with neural TTS and realistic lip-sync",
  "main": "index.html",
  "scripts": {
    "start": "live-server --host=localhost --port=3000 --entry-file=index.html",
    "dev": "live-server --host=localhost --port=3000 --entry-file=index.html --watch=js,css",
    "build": "echo 'No build step required for this vanilla JS application'",
    "serve": "python -m http.server 3000",
    "python-server": "cd .. && python tts_server.py",
    "install-deps": "npm install && pip install -r ../requirements.txt",
    "test": "echo 'No tests specified'"
  },
  "keywords": [
    "avatar",
    "tts",
    "text-to-speech",
    "lip-sync",
    "three.js",
    "webgl",
    "speech-synthesis",
    "local",
    "offline"
  ],
  "author": "AI Assistant",
  "license": "MIT",
  "devDependencies": {
    "live-server": "^1.2.2"
  },
  "dependencies": {},
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "not op_mini all"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/local-talking-avatar.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/local-talking-avatar/issues"
  },
  "homepage": "https://github.com/your-username/local-talking-avatar#readme",
  "type": "module"
}